printf("Vedit x: ");
scanf("%d",&x);
printf("Vedit b: ");
 scanf("%d", &b);
if(n<=0){printf("\n\nVu Velu ne korektne znachennya. Vedit chislo bilshe nullia...\n");continue;}
if(x<n){
if(b<n && x<b){
    int i = n;int colCount = n;
 int a[i];
for(int i = 0; i < colCount; i++)
{ printf("a[%d]=", i);
scanf("%d", &a[i]);
}
printf("\n_____________________________________________________________________________________________________");
printf("_____________________________________________________________________________________________________");
